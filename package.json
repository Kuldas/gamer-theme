  "repository": "github:Kuldas/gamer-theme",
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "engines": {
    "ghost-api": "v4"
  },
  "author": {
    "name": "Christoph Lupprich",
    "email": "christoph@luppri.ch"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Kuldas/gamer-theme/issues"
  },
  "homepage": "https://github.com/Kuldas/gamer-theme",
  "devDependencies": {
    "@snowpack/plugin-postcss": "^1.4.3",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "autoprefixer": "^10.4.2",
    "cssnano": "^5.0.15",
    "gscan": "^4.1.0",
    "postcss": "^8.4.5",
    "snowpack": "^3.7.1",
    "snowpack-plugin-content-replace": "^1.0.0",
    "tailwindcss": "^3.0.15"
  },
  "dependencies": {
