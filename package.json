{
  "name": "gamer-theme",
  "version": "1.0.0",
  "description": "A custom theme for ghost powered by Snowpack & Tailwind CSS",
  "main": "index.js",
  "scripts": {
    "dev": "snowpack build --watch",
    "test": "gscan .",
    "build": "snowpack build",
    "dist": "mkdir dist && cd assets/built && zip -r ../../dist/release ."
